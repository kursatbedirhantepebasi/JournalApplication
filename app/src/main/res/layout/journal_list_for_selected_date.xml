<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailForm"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/textView"
        android:layout_width="393dp"
        android:layout_height="76dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="29dp"
        android:text=" List For Selected Date"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/startDateCalendarIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:src="@drawable/ic_date_range_black_24dp" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="45dp"
        android:hint="Select Start Date"
        android:textSize="20dp"
        android:textColor="#000000"
        android:clickable="true"/>


    <ImageView
        android:id="@+id/endDateCalendarIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:clickable="true"
        android:src="@drawable/ic_date_range_black_24dp" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="45dp"
        android:hint="Select End Date"
        android:textSize="20dp"
        android:textColor="#000000"
        android:clickable="true"/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activeImage"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_custom"
        android:drawableTop="@drawable/ic_search_black_24dp"
        android:gravity="center|center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Search"
        android:textSize="11dp" />

</RelativeLayout>