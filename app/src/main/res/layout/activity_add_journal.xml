<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#26a69a">

        <TextView
            android:id="@+id/modalHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Add Journal"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/closePopUp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_close_white_24dp"
            android:background="#26a69a"/>

        <Button
            android:id="@+id/sharedButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_share_black_24dp"
            android:background="#26a69a"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Title"
        android:inputType="text" />

    <EditText
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:ems="10"
        android:hint="Sub Title"
        android:inputType="text" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detailForm">

        <ImageView
            android:id="@+id/calendarIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_date_range_black_24dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:hint="Select Reminder Date"
            android:textSize="20dp"
            android:textColor="#000000"
            android:clickable="true"/>

        <View android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#3F3F3F"
            android:layout_below="@+id/calendarIcon"/>







        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_location_on_black_24dp"
            android:clickable="true"
            android:layout_below="@+id/line1"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/locationView"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:clickable="true"
            android:textColor="#000000"
            android:layout_below="@+id/line1"/>

        <View android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#3F3F3F"
            android:layout_below="@+id/locationIcon"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</LinearLayout>