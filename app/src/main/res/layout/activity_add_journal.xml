<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#26a69a">

        <TextView
            android:id="@+id/modalHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Add Journal"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/closePopUp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_close_white_24dp"
            android:background="#26a69a"/>

        <Button
            android:id="@+id/sharedButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_share_black_24dp"
            android:background="#26a69a"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Title"
        android:inputType="text" />

    <EditText
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:ems="10"
        android:hint="Sub Title"
        android:inputType="text" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detailForm">

        <ImageView
            android:id="@+id/calendarIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_date_range_black_24dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:hint="Select Journal Date"
            android:textSize="20dp"
            android:textColor="#000000"
            android:clickable="true"/>

        <View android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#3F3F3F"
            android:layout_below="@+id/calendarIcon"/>

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_location_on_black_24dp"
            android:clickable="true"
            android:layout_below="@+id/line1"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/locationView"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:clickable="true"
            android:textColor="#000000"
            android:layout_below="@+id/line1"/>

        <View android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#3F3F3F"
            android:layout_below="@+id/locationIcon"
            android:layout_marginTop="5dp"/>





        <ImageView
            android:id="@+id/tagIcon"
            android:layout_width="40dp"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp"
            android:layout_below="@+id/line2"
            android:src="@drawable/ic_label_outline_black_24dp"
            android:clickable="true"/>
        <EditText
            android:id="@+id/tags"
            android:layout_width="331dp"
            android:layout_height="50dp"
            android:layout_below="@+id/line2"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="2dp"
            android:gravity="top" />

        <View android:id="@+id/line3"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#3F3F3F"
            android:layout_below="@+id/tagIcon"
            android:layout_marginTop="5dp"/>


        <ImageView
            android:id="@+id/addMemoryIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:clickable="true"
            android:layout_below="@+id/line3"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/memoryTextArea"
            android:layout_width="331dp"
            android:layout_height="50dp"
            android:layout_below="@+id/line3"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:inputType="text|textMultiLine" />


        <ImageView
            android:id="@+id/addPhotoIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_a_photo_black_24dp"
            android:clickable="true"
            android:layout_below="@+id/memoryTextArea"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/memoryTextArea"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:clickable="true" />
        <ImageView
            android:id="@+id/image2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/memoryTextArea"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="8dp"
            android:clickable="true" />
        <ImageView
            android:id="@+id/image3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/memoryTextArea"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="8dp"
            android:clickable="true" />
        <ImageView
            android:id="@+id/image4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/memoryTextArea"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="8dp"
            android:clickable="true" />
        <ImageView
            android:id="@+id/image5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/memoryTextArea"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="8dp"
            android:clickable="true" />
        <ImageView
            android:id="@+id/image6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/memoryTextArea"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="8dp"
            android:clickable="true" />
        <ImageView
            android:id="@+id/image7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/memoryTextArea"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="8dp"
            android:clickable="true" />

        <ImageView
            android:id="@+id/activeImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/image1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:clickable="true" />

        <Button
            android:id="@+id/saveJournalButton"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activeImage"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_custom"
            android:drawableTop="@drawable/ic_save_black_24dp"
            android:gravity="center|center_horizontal"
            android:text="Save"
            android:textSize="11dp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activeImage"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_custom"
            android:drawableTop="@drawable/ic_delete_black_24dp"
            android:gravity="center|center_horizontal"
            android:text="Delete"
            android:textSize="11dp" />

    </RelativeLayout>

</LinearLayout>